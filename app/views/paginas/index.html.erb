<div class="page-header">
  <%= link_to new_produto_pagina_path(@produto), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Pagina
  <% end %>
  <%= link_to produtos_path, class: 'btn btn-primary' do %>
    Produtos
  <% end %>
  <h1>Listando paginas</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Slug</th>
        <th>Produto</th>
        <th>Pr√≥xima pagina</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @paginas) do |pagina| %>
        <td><%= pagina.nome %></td>
        <td><%= pagina.slug %></td>
        <td><%= pagina.produto.nome %></td>
        <td><%= pagina.pagina.nome rescue "" %></td>
        <td><%= link_to 'Mostrar', produto_pagina_path(@produto, pagina) %></td>
        <td><%= link_to 'Editar', edit_produto_pagina_path(@produto, pagina) %></td>
        <td><%= link_to 'Apagar', produto_pagina_path(@produto, pagina), method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
