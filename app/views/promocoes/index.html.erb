<div class="page-header">
  <%= link_to new_produto_upsell_promocao_path(@produto, @upsell), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Promocao
  <% end %>
  <h1>Listando promocoes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Tempo relogio</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @promocoes) do |promocao| %>
        <td><%= promocao.nome %></td>
        <td><%= promocao.tempo_relogio.strftime("%H:%M:%S") %></td>
        <td><%= link_to 'Mostrar', produto_upsell_promocao_path(@produto, @upsell, promocao) %></td>
        <td><%= link_to 'Editar', edit_produto_upsell_promocao_path(@produto, @upsell, promocao) %></td>
        <td><%= link_to 'Apagar', produto_upsell_promocao_path(@produto, @upsell, promocao), method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
