<div class="page-header">
  <%= link_to new_produto_upsell_path(@produto), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Upsell
  <% end %>
  <%= link_to produtos_path, class: 'btn btn-primary' do %>
    Produtos
  <% end %>
  <h1>Listando upsell do produto <%= @produto.nome %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Data inicial</th>
        <th>Data final</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @upsell) do |upsell| %>
        <td><%= upsell.nome %></td>
        <td><%= upsell.data_inicial.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= upsell.data_final.strftime("%d/%m/%Y %H:%M")  %></td>
        <td><%= link_to 'Promoções', produto_upsell_promocoes_path(@produto, upsell) %></td>
        <td><%= link_to 'Mostrar', produto_upsell_path(@produto, upsell) %></td>
        <td><%= link_to 'Editar', edit_produto_upsell_path(@produto, upsell) %></td>
        <td><%= link_to 'Apagar', produto_upsell_path(@produto, upsell), method: :delete, data: { confirm: 'Confirma?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
