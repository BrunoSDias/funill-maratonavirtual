<header id="header-comprar">
    <p class="text-antencao"><i class="fas fa-exclamation-triangle"></i> Atenção</p>
    <div class="progress mt-3">
        <div class="progress-bar assistido" role="progressbar" style="width: 89%;" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100">89% assistidos</div>
    </div>
    <p class="text-descri">Seu pedido ainda está aberto...</p>
</header>

<section id="video-especialista">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="title-header">
                    Como se tornar um Especialista<br>
                    em corridas
                    <span class="color-red">sem</span>
                    assistir<br> cursos Chatos<br>
                </h1>
            </div>
        </div>
        <% if @promocao.item_promocoes.count > 0 %>
        <div class="row">
            <div class="col-md-12">
              <iframe width="100%" height="515" src="<%= @promocao.item_promocoes.first.video_embed %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
        <% end %>
    </div>
</section>

<section id="section-comprar">
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-12 text-center">
                <h3>E ai qual você vai querer?</h3>
            </div>
        </div>

        <div class="row mt-5">
          <% @promocao.item_promocoes.each_with_index do |item, i| %>
            <div class="col-md-5 jsItensPromocao">
              <input type="hidden" class="jsItemProdutoId" value="<%= item.codigo_produto %>" >
              <div class="box-check <% if i == 0 %>border-selected<% end %>" onclick="upsell.selecionaItem(this)" >
                <img src="<%= item.imagem %>" class="">
              </div>
            </div>
            <% if @promocao.item_promocoes.count > 0 && (i+1) != @promocao.item_promocoes.count %> 
              <div class="col-md-2">
                <h3 class="alinha-ou">OU</h3>
              </div>
            <% end %>
          <% end %>
        </div>

        <% if @promocao.item_promocoes.count > 0 %>
        <div class="row box-btn">
            <div class="col-md-12">
                <div class="d-flex justify-content-center ">
                    <input type="hidden" class="jsItemProximaId" value="<%= @promocao.se_pago_vai_para %>" >
                    <a href="javascript:;" onclick="upsell.adicionar(<%= @promocao.se_pago_vai_para %>)" class="button-default-green d-block -aux">Comprar por apenas R$<%= @promocao.item_promocoes.first.preco_promocional %></a>
                </div>
            </div>
        </div>
        <% end %>
        <div class="row">
            <div class="col-md-12 text-center">
                <a class="link" href="javascript:;" onclick="upsell.naoAdicionar(<%= @promocao.se_negou_vai_para %>)">Eu não quero.</a><br>
            </div>

        </div>
    </div>
</section>
